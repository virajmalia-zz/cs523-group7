<SteerBenchTestCase xmlns="http://www.magix.ucla.edu/steerbench"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.magix.ucla.edu/steerbench
                                        TestCaseSchema.xsd">

  <header>
    <version>1.0</version>
    <name>pursue-n-evade</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>

  <suggestedCameraView>
    <position> <x>44</x> <y>30</y> <z>0</z> </position>
    <lookat> <x>27</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <suggestedCameraView>
    <position> <x>104</x> <y>80</y> <z>0</z> </position>
    <lookat> <x>47</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <agent>
    <name>Thief_Main</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>-10</x> <y>0</y> <z>-0.5</z> </position>
      <direction> <x>1</x> <y>0</y> <z>0</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>15</x> <y>0</y> <z>0</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agent>

  <agent>
    <name>Cop</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>-20</x> <y>0</y> <z>-0.5</z> </position>
      <direction> <x>1</x> <y>0</y> <z>0</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekDynamicTarget>
          <targetName>Thief_Main</targetName>
          <random>false</random>
          <desiredSpeed>1.3</desiredSpeed>
          <timeDuration>1000.0</timeDuration>
      </seekDynamicTarget>
    </goalSequence>

  </agent>

  <agent>
    <name>Thief_Partner</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>20</x> <y>0</y> <z>20</z> </position>
      <direction> <x>1</x> <y>0</y> <z>0</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
        <seekStaticTarget>
          <targetLocation> <x>15</x> <y>0</y> <z>0</z> </targetLocation>
          <desiredSpeed>1.3</desiredSpeed>
          <timeDuration>1000.0</timeDuration>
        </seekStaticTarget>
      <fleeDynamicTarget>
          <targetName>Cop</targetName>
          <random>false</random>
          <desiredSpeed>1.3</desiredSpeed>
          <timeDuration>1000.0</timeDuration>
      </fleeDynamicTarget>
    </goalSequence>

  </agent>

</SteerBenchTestCase>
